{
  "name": "opsec-staking",
  "version": "1.0.0",
  "description": "A smart contract enabling users to stake OPSEC tokens for secure and efficient token staking with rewards.",
  "author": "Opsec",
  "scripts": {
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "prettier": "npx prettier --write --plugin=prettier-plugin-solidity 'contracts/**/*.sol'",
    "deploy": "npx hardhat deploy",
    "deploy:sepolia": "npx hardhat deploy --network sepolia",
    "verify:sepolia": "npx hardhat --network sepolia etherscan-verify"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.2",
    "@openzeppelin/contracts-upgradeable": "^5.0.2",
    "@openzeppelin/hardhat-upgrades": "^3.0.5",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "hardhat": "^2.21.0",
    "hardhat-deploy": "^0.12.2",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint-community": "^3.7.0",
    "solhint-plugin-prettier": "^0.1.0"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  }
}